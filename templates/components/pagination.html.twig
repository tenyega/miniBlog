{# tailwindcss Sliding pagination control implementation #}
{% if pageCount > 1 %}
    <div class="inline-block">
        <div class="flex flex-row items-baseline w-auto border border-gray-400 rounded-sm">
        {% if first is defined and current != first %}
            <span class="px-3 py-2 text-lg font-bold text-blue-600 bg-white border-r border-gray-400">
                <a href="{{ path(route, query|merge({(pageParameterName): first})) }}">&lt;&lt;</a>
            </span>
        {% endif %}

        {% if previous is defined %}
            <span class="px-3 py-2 text-lg text-blue-600 bg-white border-r border-gray-400">
                <a rel="prev" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">&lt;</a>
            </span>
        {% endif %}

        {% for page in pagesInRange %}
            {% if page != current %}
                <span class="px-3 py-2 text-lg text-blue-600 bg-white border-r border-gray-400">
                    <a href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                </span>
            {% else %}
                <span class="px-3 py-2 text-lg font-bold text-white bg-blue-600">{{ page }}</span>
            {% endif %}
        {% endfor %}

        {% if next is defined %}
            <span class="px-3 py-2 text-lg text-blue-600 bg-white border-r border-gray-400">
                <a rel="next" href="{{ path(route, query|merge({(pageParameterName): next})) }}">&gt;</a>
            </span>
        {% endif %}

        {% if last is defined and current != last %}
            <span class="px-3 py-2 text-lg font-bold text-blue-600 bg-white border-gray-400">
                <a href="{{ path(route, query|merge({(pageParameterName): last})) }}">&gt;&gt;</a>
            </span>
        {% endif %}
        </div>
    </div>
{% endif %}
